<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape
            android:shape="oval">
            <stroke
                android:color="@color/grey200"
                android:width="@dimen/display_8dp"/>

            <size
                android:width="@dimen/display_120dp"
                android:height="@dimen/display_120dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <stroke
                android:color="@color/hint_text"
                android:width="@dimen/display_8dp"/>

            <size
                android:width="@dimen/display_120dp"
                android:height="@dimen/display_120dp"/>
        </shape>
    </item>

</selector>