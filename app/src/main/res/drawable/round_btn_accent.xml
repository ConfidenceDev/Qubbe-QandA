<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/trans_accent"/>
            <stroke
                android:color="@color/colorAccent"
                android:width="@dimen/display_1dp"/>
            <corners
                android:radius="@dimen/display_50dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:color="@color/colorAccent"
                android:width="@dimen/display_2dp"/>
            <corners
                android:radius="@dimen/display_50dp"/>
        </shape>
    </item>

</selector>