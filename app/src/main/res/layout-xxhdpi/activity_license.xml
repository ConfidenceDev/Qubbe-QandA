<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LicenseActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/licenseBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/display_4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/licenseToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:titleTextColor="@color/primary_dark_text"
            app:titleTextAppearance="?android:attr/textAppearanceLarge"
            app:popupTheme="@style/AppTheme.PopupOverLay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/licenseBack"
                    android:layout_width="@dimen/display_38dp"
                    android:layout_height="@dimen/display_38dp"
                    android:src="@mipmap/ic_close_black"
                    android:layout_marginEnd="@dimen/display_8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/license"
                    android:textSize="@dimen/display_20sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/licenseBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/display_10dp"
            android:paddingBottom="@dimen/display_8dp"
            android:paddingStart="@dimen/display_8dp"
            android:paddingEnd="@dimen/display_8dp">

            <TextView
                android:id="@+id/thirdPartyLibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/thirdPartyText"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"/>

            <TextView
                android:id="@+id/third1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/third1"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_16dp"/>

            <TextView
                android:id="@+id/third2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/third2"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_8dp"/>

            <TextView
                android:id="@+id/third3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/third3"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_8dp"/>

            <TextView
                android:id="@+id/third4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/third4"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_8dp"/>

            <TextView
                android:id="@+id/third5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/third5"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_8dp"/>

            <TextView
                android:id="@+id/third6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/third6"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_8dp"/>

            <TextView
                android:id="@+id/third7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/third7"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_8dp"/>

            <TextView
                android:id="@+id/generalLicense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/generalLicense"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_16dp"/>

            <TextView
                android:id="@+id/third8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/third8"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_8dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>