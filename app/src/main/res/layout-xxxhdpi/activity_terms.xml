<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TermsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/termsBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/display_4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/termsToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:titleTextColor="@color/primary_dark_text"
            app:titleTextAppearance="?android:attr/textAppearanceLarge"
            app:popupTheme="@style/AppTheme.PopupOverLay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/termsBack"
                    android:layout_width="@dimen/display_38dp"
                    android:layout_height="@dimen/display_38dp"
                    android:src="@mipmap/ic_close_black"
                    android:layout_marginEnd="@dimen/display_8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_amp_policy"
                    android:textSize="@dimen/display_20sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termsBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/display_8dp"
            android:paddingEnd="@dimen/display_8dp"
            android:paddingBottom="@dimen/display_8dp"
            android:paddingTop="@dimen/display_10dp">

            <TextView
                android:id="@+id/legalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/legalText"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"/>

            <TextView
                android:id="@+id/privacyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/privacyText"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_16dp"/>

            <TextView
                android:id="@+id/collectionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/collectionText"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_10dp"/>

            <TextView
                android:id="@+id/deviceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/deviceInfo"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_16dp"/>

            <TextView
                android:id="@+id/useInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/useOfInfo"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_16dp"/>

            <TextView
                android:id="@+id/useInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/useOfInfoText"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_16dp"/>

            <TextView
                android:id="@+id/sharingInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/sharingInfo"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_16dp"/>

            <TextView
                android:id="@+id/security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/security"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_16dp"/>

            <TextView
                android:id="@+id/yourChoices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_text"
                android:textSize="@dimen/display_18sp"
                android:text="@string/yourChoices"
                android:gravity="start|top"
                android:lineSpacingExtra="@dimen/display_4dp"
                android:layout_marginTop="@dimen/display_16dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>